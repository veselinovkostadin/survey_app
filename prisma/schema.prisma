generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SurveyStatus {
  DRAFT
  ONGOING
  FINISHED
}

model Survey {
  id           String       @id @default(uuid())
  name         String
  introduction String?
  manager      String
  status       SurveyStatus @default(DRAFT)
  updatedAt    DateTime     @updatedAt
  createdAt    DateTime     @default(now())
}
